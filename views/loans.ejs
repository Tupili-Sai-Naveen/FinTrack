<table border="1" cellpadding="10">
  <tr>
    <th>Person</th>
    <th>Amount</th>
    <th>Interest (%)</th>
    <th>Due Date</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% loans.forEach(loan => { %>
  <tr>
    <td><%= loan.person %></td>
